<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/front_page"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_margin="10dp"
        android:layout_weight="6"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorWhite" />
        <TextView
            android:id="@+id/txt_NewNotification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/content_title_text_size"
            android:textAppearance="?android:textAppearanceMedium"
            android:text="No new message"/>

        <ListView
            android:id="@+id/lst_Adapter_Notification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:divider="@color/colorWhite"
            android:scrollbarSize="10dp"
            android:scrollbarThumbVertical="@drawable/custom_scroll"
            android:dividerHeight="2dp"></ListView>



    </LinearLayout>

</LinearLayout>
